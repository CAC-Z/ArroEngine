{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "rootDir": ".",
    "outDir": "../dist/tests",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["node"],
    "baseUrl": "..",
    "paths": {
      "@shared/*": ["src/shared/*"]
    }
  },
  "include": ["./**/*.ts"],
  "references": [
    { "path": "../src/shared" },
    { "path": "../src/main" }
  ]
}
